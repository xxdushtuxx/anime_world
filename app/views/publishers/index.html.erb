<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <title>Publishers</title>
  </head>
  <body>
    <%= render 'shared/menu' %>

    <div class="container">
        <div class="row">
            <% @publishers.each do |publisher| %>
            <div class="col-lg-4 mb-4">
                <div class="card h-100">
                <img src="<%= publisher.image_thumb %>" class="card-img-top" alt="<%= publisher.name %> Thumbnail">
                <div class="card-body d-flex flex-column">
                    <h2 class="card-title"><%= link_to publisher.name, publisher_path(publisher), style: "text-decoration: none;" %></h2>
                    <p class="card-text"><%= publisher.deck %></p>
                    <p>Number of Characters: <%= publisher.characters.count %></p>
                    <div class="mt-auto">
                    <%= link_to "Show Characters", publisher_characters_path(publisher), class: "btn btn-primary" %>
                    </div>
                </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>

<%= paginate @publishers %>



  </body>
</html>


